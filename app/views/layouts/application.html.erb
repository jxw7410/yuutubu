<!DOCTYPE html>
<html>
  <head>
    <title>Yuutubu</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <% if login?%>
      <script>
        window.currentUser = {
          id: '<%= current_user.id %>',
          email: '<%= current_user.email%>'
        }
      </script>
    <% end %>

  </head>

  <body>
    <%= yield %>
  </body>
</html>
